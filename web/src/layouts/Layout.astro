---
type Props = {
  meta: {
    title: string;
    description: string;
  };
  class: string;
};

const { meta, class: className } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- iOS meta tags & icons -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="apple-mobile-web-app-title" content="Monopoly Mobile Banking" />
    <link rel="apple-touch-icon" href="icons/pwa-192x192.png" />

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/png" href="icons/pwa-192x192.png" />

    <title>{meta.title}</title>
    <meta name="description" content={meta.description} />

    <meta
      name="google-site-verification"
      content="vnaWnecT09gII0SdnMKPjHHNoz6OvaISjmFmqf1JraE"
    />
  </head>
  <body class={className}>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
